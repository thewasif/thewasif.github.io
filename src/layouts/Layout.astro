---
import PalestineBanner from "../components/PalestineBanner.astro";
import GithubIcon from "../icons/github.astro";
import LinkedinIcon from "../icons/linkedin.astro";
import MediumIcon from "../icons/medium.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icon.png" />
    <meta name="theme-color" content="#3451b2" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Aref+Ruqaa+Ink:wght@700&display=swap"
      rel="stylesheet"
    />

    <title>
      Muhammad Wasif - Software Developer, Google Code-in 2019 Runner Up
    </title>
    <meta
      name="description"
      content="Wasif is software engineer who has been building stuff with programming since the age of 15. He loves to learn and develop projects that help people in their daily life."
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://thewasif.github.io/" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Muhammad Wasif - Software Developer, Google Code-in 2019 Runner Up"
    />
    <meta
      property="og:description"
      content="Wasif is software engineer who has been building stuff with programming since the age of 15. He loves to learn and develop projects that help people in their daily life."
    />
    <meta
      property="og:image"
      content="https://opengraph.b-cdn.net/production/documents/1070d3ed-cabc-4053-9639-8a11f02597a0.png?token=TdwZ_WLXT0j3DDJSGn8tHMSLEvpNDYAKl0ufnrvgY4c&height=285&width=584&expires=33247365255"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="thewasif.github.io" />
    <meta property="twitter:url" content="https://thewasif.github.io/" />
    <meta
      name="twitter:title"
      content="Muhammad Wasif - Software Developer, Google Code-in 2019 Runner Up"
    />
    <meta
      name="twitter:description"
      content="Wasif is software engineer who has been building stuff with programming since the age of 15. He loves to learn and develop projects that help people in their daily life."
    />
    <meta
      name="twitter:image"
      content="https://opengraph.b-cdn.net/production/documents/1070d3ed-cabc-4053-9639-8a11f02597a0.png?token=TdwZ_WLXT0j3DDJSGn8tHMSLEvpNDYAKl0ufnrvgY4c&height=285&width=584&expires=33247365255"
    />

    <!-- Meta Tags Generated via https://www.opengraph.xyz -->
  </head>
  <body>
    <PalestineBanner />
    <nav>
      <div>
        <a href="/">
          <h2>محمد واصف</h2>
        </a>
      </div>
      <div class="links">
        <p>
          <a href="/about">About</a>
        </p>
        <p>
          <a href="/experience">Experience</a>
        </p>
        <p>
          <a href="/projects">Projects</a>
        </p>
      </div>
    </nav>

    <slot />

    <div class="social">
      <div class="icon">
        <a href="https://github.com/thewasif" target="_blank">
          <GithubIcon />
        </a>
      </div>
      <div class="icon">
        <a href="https://medium.com/@muhammadwasif" target="_blank">
          <MediumIcon />
        </a>
      </div>
      <div class="icon">
        <a href="https://www.linkedin.com/in/muhammad-wasif/" target="_blank">
          <LinkedinIcon />
        </a>
      </div>
      <div class="vertical-line"></div>
    </div>
    <style is:global>
      :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          #3e63dd 30%,
          white 60%
        );
        --color: #11181c;
        --background: #fbfcfd;
        --primary: #3451b2;
        --text: #11181c;
        --text-light: #687076;
        --light-bg: #f1f3f5;
      }
      html {
        font-family: system-ui, sans-serif;
        background-color: var(--background);
        margin: 0;
        padding: 0;
      }
      body {
        margin: 0;
        padding: 0;
      }

      main {
        margin: auto;
        padding: 4rem 1.5rem 0 1.5rem;
        max-width: 110ch;
      }

      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }

      nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.4rem 0.8rem;
      }
      @media (min-width: 1590px) {
        main {
          max-width: 140ch;
        }
      }

      @media (max-width: 450px) {
        nav {
          flex-direction: column;
        }
        .links {
          margin-top: 1rem;
        }
      }
      nav h2 {
        margin: 0;
        font-family: "Aref Ruqaa Ink", serif;
        user-select: none;
      }
      .links {
        display: flex;
      }

      .links p {
        margin: 0 0.8rem;
      }
      .links a {
        text-decoration: none;
        color: var(--primary);
      }
      .social {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: absolute;
        bottom: 0;
        left: 30px;
      }
      .social .icon {
        color: var(--color);
      }
      .vertical-line {
        width: 1px;
        height: 100px;
        background-color: var(--color);
      }
      a {
        text-decoration: none;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --accent: 124, 58, 237;
          --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            #3e63dd 30%,
            white 60%
          );
          --color: #ecedee;
          --background: #151718;
          --primary: #849dff;
          --light-bg: #202425;
          --text: #ecedee;
          --text-light: #9ba1a6;
        }
      }

      @media (max-width: 1200px) {
        .social {
          display: none;
        }
      }

      ::selection {
        background-color: #3e63dd;
        color: white;
      }
    </style>
  </body>
</html>
